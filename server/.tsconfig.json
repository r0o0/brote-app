{
  "compilerOptions": {
    "outDir": "./public/",
    "target": "ES6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2016", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "node_modules/@types"
  ],
  "exclude": ["node_modules"]
 }