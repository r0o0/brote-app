type User {
  id: ID! @id
  name: String
  email: String! @unique
  password: String!
  joinedOn: DateTime
  lastLogin: DateTime
  role: String @default(value: "user")
  posts: [Post!]! @relation(link: INLINE)
}

type Guest {
  id: ID! @id
  name: String! @unique
  password: String!
  joinedOn: String
  isExpired: Boolean @default(value: false)
  role: String @default(value: "guest")
}

type Post {
  id: ID! @id
  title: String!
  author: User!
  content: String!
  savedOn: DateTime
  publishedOn: DateTime
  isPublished: Boolean @default(value: false)
}